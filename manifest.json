{
    "manifest_version": 2,
    "name": "Feed Blocker",
    "version": "1.0",
    "description": "Block the feed on LinkedIn",
    "background": {
      "scripts":["background.js"]
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.linkedin.com/*"
        ],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "tabs", "storage"
    ]
  }